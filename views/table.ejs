<!-- DataTales Example -->
<style>
  /* Menambahkan margin kanan pada tombol "Edit" */
  .button-update {
    margin-right: 10px; /* Memberikan margin kanan sebesar 5px */
  }
</style>
<div class="card shadow mb-4">
  <div class="card-header py-3">
    <!-- Button trigger modal -->
    <button
      type="button"
      class="btn btn-outline-primary btn-sm"
      data-toggle="modal"
      data-target="#add-modal"
    >
      Add
    </button>
  </div>
  <div class="card-body">
    <div class="table-responsive">
      <table
        class="table table-bordered"
        id="dataTable"
        width="100%"
        cellspacing="0"
      >
        <thead>
          <tr align="center">
            <th>No</th>
            <th>Produk</th>
            <th>Bahan</th>
            <th>Warna</th>
            <th>Foto</th>
            <th>Harga</th>
            <th>Deskripsi</th>
            <th>Action</th>
          </tr>
        </thead>
        <tbody>
          <% for(let i = 0; i < product.length; i++){ %>
          <tr>
            <td><%= i + 1 %></td>
            <td><%= product[i].nama %></td>
            <td><%= product[i].bahan %></td>
            <td><%= product[i].warna %></td>
            <td><img src="/images/<%= product[i].foto %>" width="200px"></td>
            <td><%= product[i].harga %></td>
            <td><%= product[i].deskripsi %></td>
            <td class="text-center">
              <form action="/product/<%= product[i].id %>?_method=DELETE" method="POST">
                <!-- Grouping Edit and Delete buttons in a single line -->
                <div class="btn-group" role="group">
                  <a
                  href="javascript:void()"
                  class="btn btn-outline-warning btn-sm button-update"
                  data-id="<%= product[i].id %>"
                  data-nama="<%= product[i].nama %>"
                  data-bahan="<%= product[i].bahan %>"
                  data-warna="<%= product[i].warna %>"
                  data-foto="/images/<%= product[i].foto %>"
                  data-harga="<%= product[i].harga %>"
                  data-deskripsi="<%= product[i].deskripsi %>"
                  data-toggle="modal"
                  data-target="#edit-modal"
                  >Edit</a>
                  <!-- Adding a form for delete button with CSRF protection if needed -->
                    <button type="submit" class="btn btn-outline-danger btn-sm"
                    onclick="return confirm('Apa kamu yakin ingin menghapus aku dari ingatan kamu?');">
                      Delete
                    </button>
                    <a href="/product/<%= product[i]._id %>" class="btn btn-primary btn-sm">Detail</a>
                </div>
              </form>
            </td>
          </tr>
          <% } %>
        </tbody>
      </table>
    </div>
  </div>
</div>
